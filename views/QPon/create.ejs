<style>
    #mall {
        float: right;
        width:50%;
    }
    #region{
        float: left;
        width: 50%;
    }
</style>

<form action="/QPon/create" method="post">

    <div class="field">
        <label class="label">Title</label>
        <div class="control">
            <input class="input" type="text" name="title" required>
        </div>
    </div>

    <div class="field">
        <label class="label">Restaruant</label>
        <div class="control">
            <input class="input" type="text" name="restaurant" required>
        </div>
    </div>


    <div class="field" id="region">
        <label class="label">Region</label>
        <div class="control">
            <div class="select" type="text" name="region" required>
                <select>
                    <option>NT</option>
                    <option>HK</option>
                    <option>KL</option>
                </select>
            </div>
        </div>
    </div>

    <div class="field" id="mall">
        <label class="label">Mall</label>
        <div class="control">
            <div class="select" type="text" name="mall" required>
                <select>
                    <option>abc</option>
                    <option>jjj</option>
                    <option>yyy</option>
                </select>
            </div>
        </div>
    </div>

    <br>
    
    <div class="field">
        <label class="label">Image</label>
        <div class="control">
            <input class="input" type="text" name="image" required>
        </div>
    </div>

    <div class="field">
        <div class="control">
            <button class="button is-link" type="submit">Submit</button>
        </div>
    </div>



</form>